<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="mrp_production_form_view_attachments" >
            <field name="name">mrp.production.form.view.attachments</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Sale Line Attachments">
                        <field name="sale_line_attachment_ids" widget="many2many_binary" string="Attach a file" nolabel="1"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>